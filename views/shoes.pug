extends layout

block content
  h1= title
  -
    let result = results
  div(class= "container-fluid")
    div(class = "row m-1")
      each item, index in result
        - let destination = `dispatch("/shoes/update?id=${item._id}")`
        div(class= "col-sm-2", onclick=`buy(${index})`) Brand: #{item.shoes_brand}
        div(class= "col-sm-2", onclick=`buy(${index})`) Quantity: #{item.shoes_quantity}
        div(class= "col-sm-2", onclick=`buy(${index})`) Cost: #{item.shoes_cost}
        button.btn(class="btn-primary ml-1", onclick= destination) Update
        br
        br

  script.
    function buy(itemNum){
      alert(`You purchased item ${itemNum+1}`)
    }

  script.
    function dispatch(path){
      window.location.href=path
    }
